{
  "name": "electronade-pgstore",
  "version": "0.1.0",
  "description": "It's a package for electronade that provides store feature using postgresql.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "format": "npm run format:src && npm run format:test",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "prepare": "husky install",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register \"test/**/*.ts\" --timeout 30000"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:src",
      "npm run format:src"
    ],
    "test/**/*.ts": [
      "npm run lint:test",
      "npm run format:test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/electronade-pgstore.git"
  },
  "keywords": [],
  "author": "tom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomsdoo/electronade-pgstore/issues"
  },
  "homepage": "https://github.com/tomsdoo/electronade-pgstore#readme",
  "dependencies": {
    "@tomsd/pgkvs": "^1.0.0"
  },
  "devDependencies": {
    "@tomsd/md-book": "^0.17.0",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "electron": "^20.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
